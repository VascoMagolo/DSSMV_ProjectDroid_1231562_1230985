<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              app:cardCornerRadius="18dp"
              app:cardElevation="3dp"
              app:strokeColor="?attr/colorOutlineVariant"
              app:strokeWidth="1dp"
              android:padding="16dp">

    <TextView
            android:id="@+id/dialog_text_original"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Original text here"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:padding="12dp"
            android:background="?attr/colorSurfaceContainerHigh"
            android:layout_marginBottom="8dp" />

    <TextView
            android:id="@+id/dialog_text_translated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Translated text here"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:padding="12dp"
            android:background="?attr/colorSurfaceContainerHigh"
            android:layout_marginBottom="16dp" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Languages:"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface" />

        <TextView
                android:id="@+id/dialog_text_languages"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="EN â†’ PT"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:gravity="end" />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Date:"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface" />

        <TextView
                android:id="@+id/dialog_text_timestamp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="01/01/2024 10:30"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:gravity="end" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/dialog_btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete Conversation"
            android:textColor="?attr/colorOnError"
            app:icon="@drawable/baseline_delete_forever_24"
            app:iconTint="?attr/colorOnError"
            app:backgroundTint="?attr/colorErrorContainer"
            android:layout_gravity="center_horizontal"
            style="@style/Widget.Material3.Button.TextButton" />

</LinearLayout>