<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="18dp"
        app:cardElevation="3dp"
        app:strokeColor="?attr/colorOutlineVariant"
        app:strokeWidth="1dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

    <TextView
            android:id="@+id/dialog_text_original"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Original text here"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:padding="12dp"
            android:background="?attr/colorSurfaceContainerHigh"
            android:layout_marginBottom="8dp" />

    <TextView
            android:id="@+id/dialog_text_translated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Translated text here"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:padding="12dp"
            android:background="?attr/colorSurfaceContainerHigh"
            android:layout_marginBottom="16dp" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Languages:"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface" />

        <TextView
                android:id="@+id/dialog_text_languages"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="EN â†’ PT"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:gravity="end" />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Date:"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface" />

        <TextView
                android:id="@+id/dialog_text_timestamp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="01/01/2024 10:30"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:gravity="end" />

    </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical|start">

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/dialog_btn_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete"
                    android:textColor="?attr/colorError"
                    app:icon="@drawable/baseline_delete_forever_24"
                    app:iconTint="?attr/colorError"
                    style="@style/Widget.Material3.Button.TextButton"/>
            <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />


            <com.google.android.material.button.MaterialButton
                    android:id="@+id/dialog_btn_favorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_favorite"
                    app:iconTint="?attr/colorOnSurfaceVariant"
                    style="@style/Widget.Material3.Button.IconButton"/>

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/dialog_btn_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_share_2"
                    app:iconTint="?attr/colorOnSurfaceVariant"
                    style="@style/Widget.Material3.Button.IconButton"/>

        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>