<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:padding="24dp"
                                                   android:background="?attr/colorSurface">


    <TextView
            android:id="@+id/textGreeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello!"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp" />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHistory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:text="See Conversation History"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:insetTop="12dp"
            android:insetBottom="12dp"
            android:layout_marginTop="48dp"
            android:textColor="?attr/colorOnPrimaryContainer"
            app:cornerRadius="16dp"
            app:icon="@android:drawable/ic_menu_recent_history"
            app:iconTint="?attr/colorOnPrimaryContainer"
            app:iconGravity="textStart"
            app:backgroundTint="?attr/colorPrimaryContainer"
            app:layout_constraintTop_toBottomOf="@id/textGreeting"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/btnImageHistory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:text="See Image History"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:insetTop="12dp"
            android:insetBottom="12dp"
            android:layout_marginTop="16dp"
            android:textColor="?attr/colorOnPrimaryContainer"
            app:cornerRadius="16dp"
            app:icon="@android:drawable/ic_menu_camera"
            app:iconTint="?attr/colorOnPrimaryContainer"
            app:iconGravity="textStart"
            app:backgroundTint="?attr/colorPrimaryContainer"
            app:layout_constraintTop_toBottomOf="@id/btnHistory"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEditProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:text="Edit Profile"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:insetTop="12dp"
            android:insetBottom="12dp"
            android:layout_marginTop="16dp"
            android:textColor="?attr/colorOnPrimaryContainer"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_update_account"
            app:iconTint="?attr/colorOnPrimaryContainer"
            app:iconGravity="textStart"
            app:backgroundTint="?attr/colorPrimaryContainer"
            app:layout_constraintTop_toBottomOf="@id/btnImageHistory"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDeleteAccount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:text="Delete Account"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:insetTop="12dp"
            android:insetBottom="12dp"
            android:layout_marginTop="16dp"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_delete"
            app:iconTint="?attr/colorOnError"
            app:iconGravity="textStart"
            app:backgroundTint="?attr/colorErrorContainer"
            android:textColor="?attr/colorOnErrorContainer"
            app:layout_constraintTop_toBottomOf="@id/btnEditProfile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:text="Logout"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:insetTop="12dp"
            android:insetBottom="12dp"
            android:layout_marginBottom="16dp"
            app:cornerRadius="16dp"
            app:icon="@drawable/baseline_logout_24"
            app:iconTint="?attr/colorOnErrorContainer"
            app:iconGravity="textStart"
            app:backgroundTint="?attr/colorErrorContainer"
            android:textColor="?attr/colorOnErrorContainer"
            app:layout_constraintTop_toBottomOf="@id/btnDeleteAccount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
