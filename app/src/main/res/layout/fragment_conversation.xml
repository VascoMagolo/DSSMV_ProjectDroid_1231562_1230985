<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:gravity="center"
                  android:padding="24dp"
                  android:background="@color/white"><![CDATA[>
        ]]>
        <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Conversation by voice"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:paddingBottom="12dp"/>

        <TextView
                android:id="@+id/txtTranslated"
                android:text="Translated text will appear here"
                android:textSize="18sp"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"/>
        />
        <TextView
                android:id="@+id/txtRecognized"
                android:text="Original speech will appear here"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"/>
        <Button
                android:id="@+id/btnStartListening"
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:text="Talk"
                android:drawableLeft="@drawable/baseline_mic_24"
                android:paddingHorizontal="32dp"
                android:paddingVertical="12dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>