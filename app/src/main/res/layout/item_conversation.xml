<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="6dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="3dp"
        app:strokeColor="?attr/colorOutlineVariant"
        app:strokeWidth="1dp"
        app:cardBackgroundColor="?attr/colorSurfaceContainerHigh">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">


        <TextView
                android:id="@+id/txtOriginal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Olá, tudo bem?"
                android:textColor="?attr/colorOnSurface"
                android:textStyle="bold"
                android:textSize="16sp"
                android:letterSpacing="0.01"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        <TextView
                android:id="@+id/txtTranslatedItem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Hello, how are you?"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="15sp"
                android:layout_marginTop="8dp"
                android:lineSpacingExtra="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtOriginal"
                app:layout_constraintEnd_toEndOf="parent" />

        <TextView
                android:id="@+id/txtLangs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="PT → EN"
                android:textColor="?attr/colorOutline"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:letterSpacing="0.05"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtTranslatedItem"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
